{
  "name": "diagram",
  "displayName": "diagram",
  "description": "extension for diagram language",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.45.0"
  },
  "publisher": "sdrubolo",
  "repository": "https://github.com/sdrubolo/diagram-vscode",
  "icon": "images/logo/diagram.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:diagram"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "diagram.parsingError",
        "description": "Background decoration for errors resulted in parsing",
        "defaults": {
          "dark": "#FF000055",
          "light": "#FF000055",
          "highContrast": "#FF000055"
        }
      }
    ],
    "commands": [
      {
        "command": "diagram.show",
        "title": "Diagram Preview",
        "when": "editorLangId == diagram",
        "category": "Diagram"
      },
      {
        "command": "diagram.helper",
        "title": "Diagram Helper",
        "when": "editorLangId == diagram",
        "category": "Diagram"
      },
      {
        "command": "diagram.convert-pdf",
        "title": "Export Diagram to PDF",
        "when": "editorLangId == diagram",
        "category": "Diagram"
      },
      {
        "command": "diagram.convert-svg",
        "title": "Export Diagram to SVG",
        "when": "editorLangId == diagram",
        "category": "Diagram"
      },
      {
        "command": "diagram.convert-png",
        "title": "Export Diagram to PNG",
        "when": "editorLangId == diagram",
        "category": "Diagram"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "diagram.show",
          "group": "navigation",
          "when": "editorLangId == diagram"
        },
        {
          "command": "diagram.helper",
          "group": "navigation",
          "when": "editorLangId == diagram"
        },
        {
          "command": "diagram.convert-pdf",
          "group": "navigation",
          "when": "editorLangId == diagram"
        },
        {
          "command": "diagram.convert-svg",
          "group": "navigation",
          "when": "editorLangId == diagram"
        },
        {
          "command": "diagram.convert-png",
          "group": "navigation",
          "when": "editorLangId == diagram"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/dom-parser": "^0.1.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "convert-svg-to-png": "^0.5.0",
    "svg-parser": "^2.0.4",
    "svg-to-pdfkit": "^0.1.7",
    "svg-to-png": "^4.0.0"
  }
}
